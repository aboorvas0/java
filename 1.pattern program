import java.io.*;
public class Main
{
	public static void main(String[] args) throws Exception
	{
		DataInputStream d=new DataInputStream(System.in);
		System.out.println("enter the pattern value");
		int n=Integer.parseInt(d.readLine());
		for(int i=1;i<=n;i++)
		{
		    for(int j=1;j<=n;j++)
		    {
		        if(i==j||i+j==n+1)
		            System.out.print("*");
		           else
		            System.out.print(" ");
		            
		    }
		    System.out.println("");
		}
	}
}
